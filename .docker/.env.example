# Docker Compose Environment Variables
# Copy this file to .env and adjust the values as needed

# Application Configuration
NODE_ENV=production
VERSION=latest

# Git commit hash for build (auto-detected if not set)
# GIT_COMMIT=auto

# Port Configuration
HOST_PORT=8080
CONTAINER_PORT=8080

# Data Directory
# Base path for all volume mounts (data, logs, config)
# Relative to the .docker directory
BASE_PWD=./data

# Logging
LOG_LEVEL=info

# Resource Limits (optional, override docker-compose defaults)
# CPU_LIMIT=1.0
# MEMORY_LIMIT=512M
# CPU_RESERVATION=0.25
# MEMORY_RESERVATION=256M

# Network Configuration
# SUBNET=172.25.0.0/16
